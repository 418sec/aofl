{
  "verbose": false,
  "testTimeout": 600000,
  "plugins": {
    "local": {
      "browsers": [
        "firefox",
        "chrome"
      ],
      "browserOptions": {
        "chrome": [
          "headless"
        ],
        "firefox": [
          "-headless"
        ]
      }
    },
    "istanbul": {
      "dir": "./coverage/",
      "reporters": [
        "text-summary",
        "lcov"
      ],
      "include": "**/*.js"
    }
  }
}

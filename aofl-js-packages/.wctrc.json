{
  "verbose": true,
  "persistent": false,
  "plugins": {
    "local": {
      "browsers": [
        "chrome"
      ],
      "browserOptions": {
        "chrome": [
          "headless",
          "disable-gpu",
          "no-sandbox"
        ]
      }
    },
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": "**/*.js",
      "exclude": [
        "**/node_modules",
        "**/node_modules_sourced",
        "**/documentation{,!(/tests/**)}",
        "**/__config",
        "**/cli",
        "**/*-instance/**",
        "**/*-loader/**",
        "**/*-polyfill/**",
        "**/*-plugin/**",
        "**/router/examples"
      ]
    }
  }
}

{
  "version": "3.0.0-beta.0",
  "packages": [
    "aofl-js-packages/*",
    "cli-tools/*",
    "webpack-packages/*"
  ],
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-package-lock",
    "--registry",
    "https://registry.npmjs.org"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**",
        "codemods/**",
        "**/!(package).json"
      ]
    }
  }
}
